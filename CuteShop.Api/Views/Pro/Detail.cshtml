<div id="content" style="position:relative">
    <div class="breadcrumb"> <a href="index.html">Home</a> » <a href="category.html">Clothes For Girls</a> » <a href="#">Brown Shoes for Boys</a> </div>
    <h1><span class="h1-top">Brown Shoes for Boys</span></h1>
    <div class="product-info" style="overflow:inherit">
        <div class="left">
            <div class="image">
                <a href="http://localhost:49923/@Model.Image" title="" class="cloud-zoom" id='zoom1' rel="adjustX: 0, adjustY:0"><img src="http://localhost:49923/@Model.Image" title="" alt="" id="image" /></a>
                <div class="zoom"><a id="zoomer" class="colorbox" href="http://localhost:49923/@Model.Image">+ Zoom</a></div>
            </div>
            <div class="image-additional">
                <div id="carousel-p">
                    @if (moreImages != null)
                    {
                        <ul class="jcarousel-skin-tfc">


                            @foreach (var image in moreImages)
                            {
                                <li>
                                    <a href="http://localhost:49923/@image" title="" class="cloud-zoom-gallery" rel="useZoom: 'zoom1', smallImage: 'http://localhost:49923/@image' ">
                                        <img src="http://localhost:49923/@image" title="" alt="" />
                                    </a>
                                </li>
                            }


                        </ul>
                    }
                </div>
            </div>
            <div style="clear:both"></div>
        </div>
        <div class="right">
            <div class="description">
                <div class="price">
                    <span id="line_s"></span>
                    <p class="wrap_price">
                    <p class="wrap_price">
                        @if (Model.PromotionPrice.HasValue)
                        {
                            <span class="price-old">@Model.Price.ToString("N0") VNĐ</span>
                            <span class="price-new">@Model.PromotionPrice.Value.ToString("N0") VNĐ</span>
                        }
                        else
                        {
                            <span class="price-old" style="text-decoration:none;">@Model.Price.ToString("N0") VNĐ</span>
                        }
                    </p>

                    </p>
                </div>
            </div>
            <div class="cart">
                <div>
                    Qty:
                    <input type="text" name="quantity" size="2" value="1">
                    &nbsp;
                    <input type="button" value="Thêm vào giỏ" data-id="@Model.ID" id="button-cart" class="button">
                    <span>&nbsp;&nbsp;- OR -&nbsp;&nbsp;</span> <span class="links">
                        <a>Thêm vào danh sách yêu thích</a><br>
                        <a>Thêm vào danh sách so sánh</a>
                    </span>
                </div>
            </div>
            <div class="review">
                <div><img src="/Assets/image/stars-4.png" alt="0 reviews"></div>
                <div><a>6 reviews</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a>Write a review</a></div>
                <div class="share"><img src="/Assets/image/share2.png" alt=""></div>
            </div>
            <div class="review">
                <h5><i class="fa fa-tags" aria-hidden="true"></i> Tags:</h5>
                <ul>
                    @foreach (var tag in (IEnumerable<CuteShop.Api.Models.TagViewModel>)ViewBag.Tags)
                    {
                        <li><a href="/tag/@(tag.ID).html" style="text-decoration:none; float:left"><span class="label label-primary">@(tag.Name)&nbsp </span></a></li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div id="tabs" class="htabs" style="position:absolute;top: 530px;"><a href="#tab-description">Mô tả sản phẩm</a><a href="#tab-specification">Specifications</a><a href="#tab-review">Reviews (6)</a> </div>
    <div id="tab-description" class="tab-content">
        <div class="cpt_product_description ">
            <div>
                @Model.Description
            </div>
        </div>
    </div>
